{
  "name": "slack-mcp-bot-agent",
  "version": "1.0.0",
  "description": "Mastra-based AI agent for Slack bot with MCP integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/agent/index.ts",
